<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entry_add_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:gravity="center"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <EditText
                android:id="@+id/entry_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete|textCapSentences"
                android:hint="@string/entry_title"
                android:textAppearance="@android:style/TextAppearance.Large"/>

            <ViewSwitcher
                android:id="@+id/entry_preview_switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inAnimation="@android:anim/slide_in_left"
                android:outAnimation="@android:anim/slide_out_right">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <GridLayout
                        android:id="@+id/entry_quick_button_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:columnCount="6"
                        android:rowCount="2">

                        <ImageView
                            android:id="@+id/entry_quick_bold"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/bold"/>

                        <ImageView
                            android:id="@+id/entry_quick_italic"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/italic"/>

                        <ImageView
                            android:id="@+id/entry_quick_underlined"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/underlined"/>

                        <ImageView
                            android:id="@+id/entry_quick_strikethrough"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/strikethrough"/>

                        <ImageView
                            android:id="@+id/entry_quick_code"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/code"/>

                        <ImageView
                            android:id="@+id/entry_quick_quote"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/quote"/>

                        <ImageView
                            android:id="@+id/entry_quick_number_list"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/numbered_list"/>

                        <ImageView
                            android:id="@+id/entry_quick_bullet_list"
                            android:layout_row="1"
                            android:layout_column="3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/bulleted_list"/>

                        <ImageView
                            android:id="@+id/entry_quick_link"
                            android:layout_row="1"
                            android:layout_column="4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/link"
                            android:layout_margin="2dp"/>

                        <ImageView
                            android:id="@+id/entry_quick_image"
                            android:layout_row="1"
                            android:layout_column="5"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/image"
                            android:layout_margin="2dp"/>

                    </GridLayout>

                    <EditText
                        android:id="@+id/entry_source_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete|textMultiLine"
                        android:hint="@string/entry_content"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:minLines="2"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/entry_markdown_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

            </ViewSwitcher>

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:id="@+id/entry_button_bar_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/entry_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@android:string/cancel"
                    android:textColor="@color/md_red_900"/>

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/entry_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/preview"/>

                <Button
                    style="?android:attr/buttonBarButtonStyle"
                    android:id="@+id/entry_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/submit"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</android.support.v7.widget.CardView>