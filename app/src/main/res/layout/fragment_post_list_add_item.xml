<?xml version="1.0" encoding="utf-8"?>
<com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/entry_markdown_preview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_long"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <GridLayout
        android:id="@+id/entry_quick_button_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_markdown_preview"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:columnCount="4"
        android:rowCount="2">

        <ImageView
            android:id="@+id/entry_quick_bold"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <ImageView
            android:id="@+id/entry_quick_italic"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </GridLayout>

    <EditText
        android:id="@+id/entry_source_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entry_quick_button_area"
        android:layout_marginTop="8dp"
        android:inputType="textAutoComplete"
        android:hint="@string/entry_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:lines="3"
        android:maxLines="10"/>

</com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>